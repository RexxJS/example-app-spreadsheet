{
  "name": "example-app-spreadsheet",
  "version": "1.0.0",
  "description": "A proof-of-concept web spreadsheet powered by RexxJS expressions, built with React and Tauri.",
  "type": "module",
  "main": "src/main.jsx",
  "scripts": {
    "dev": "vite",
    "dev:vite": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:dev:file": "tauri dev --",
    "tauri:dev:control-bus": "ENABLE_CONTROL_BUS=1 tauri dev",
    "tauri:build": "tauri build",
    "test": "npm run test:unit && npm run test:web",
    "test:unit": "jest --testMatch='**/tests/**/*.spec.js' --testPathIgnore='web\\.spec\\.js'",
    "test:web": "playwright test",
    "test:web:debug": "playwright test --debug",
    "test:screenshots": "TAKE_SCREENSHOT=1 playwright test spreadsheet-screenshots-web.spec.js",
    "test:integration": "npm run tauri:dev:control-bus &",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,css}\""
  },
  "keywords": [
    "rexxjs",
    "spreadsheet",
    "react",
    "tauri",
    "control-bus"
  ],
  "author": "RexxJS",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "@tauri-apps/cli": "^2.9.3",
    "@vitejs/plugin-react": "^4.2.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vite": "^4.5.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@tauri-apps/api": "^2.9.0",
    "js-yaml": "^4.1.1",
    "papaparse": "^5.5.3"
  }
}
